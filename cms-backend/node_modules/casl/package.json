{
  "name": "casl",
  "version": "0.2.0",
  "description": "CASL is an isomorphic authorization JavaScript library which restricts what resources a given user is allowed to access",
  "main": "dist/umd/index.js",
  "module": "dist/es6/index.js",
  "scripts": {
    "build.es": "rollup -c tools/rollup.es.js",
    "build.umd": "rollup -c tools/rollup.umd.js",
    "prebuild": "npm run lint",
    "build": "npm run build.es && npm run build.umd",
    "test": "NODE_ENV=test mocha -r ./spec/config ./spec/*.spec.js",
    "lint": "eslint -c .eslintrc src/",
    "release": "NODE_ENV=production standard-version && npm run build && npm test"
  },
  "keywords": [
    "access control",
    "authorization",
    "acl",
    "cancan",
    "security",
    "permissions"
  ],
  "author": "Sergii Stotskyi <sergiy.stotskiy@freaksidea.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.0",
    "chai-spies": "^0.7.1",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.4.2",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "standard-version": "^4.2.0"
  },
  "dependencies": {
    "sift": "~3.3.12"
  }
}
